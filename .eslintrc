{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "quotes": [1, "single"],
    "no-console": 2,
    "no-debugger": 2,
    "no-var": 2,
    "semi": [1, "always"],
    "no-trailing-spaces": 1,
    "eol-last": 1,
    "max-len": 1,
    "no-unused-vars": 2,
    "no-underscore-dangle": 1,
    "no-alert": 2,
    "no-lone-blocks": 2,
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }]
  }
}

